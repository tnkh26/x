<div calss='container'>
    <div class='row'>
        <div class='col-md-3'>

<h1>User info</h1>

 <%= render 'pro', user: current_user %>
 
<h1 class='mt-2'>New book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title, class: 'form-control book_title' %>
	
  <h4>Option</h4>
  <%= f.text_area :body, class: 'form-control book_body' %>
	
  <%= f.submit 'Create Bok', class: 'btn btn-success' %>
<% end %>

        </div>


 <div class='col-md-8 offset-md-1'>
  <h1>Users</h1>
  
  <table class='table table-hover '>
    
    <thead>
      
      <tr>
        <th>image</th>
        <th>name</th>
        <th><%#空白%></th>
        <th colspan="3"></th>
      </tr>
      
    </thead>
    
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
         <% if user.image.attached? %>
           <%= image_tag user.get_prpfile_image("100x100") %>
         <% else %>
           <%= image_tag 'no_image', size: "100x100" %>
         <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'show', class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
    
  </table>
 </div>


    </div>
</div>